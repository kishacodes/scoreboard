---
import Layout from '../layouts/Layout.astro';
Astro.cookies.set('auth', '', {
  path: '/',
  httpOnly: true,
  secure: true,
  sameSite: 'strict',
  maxAge: 0,
});
---
<Layout title="Logged Out - Emerson Mavericks Football">
  <main class="container">
    <h1>Logged Out</h1>
    <p>You have been successfully logged out.</p>
    <p>Redirecting you to the homepage...</p>
    <script>
      setTimeout(() => {
        window.location.href = '/';
      }, 2000);
    </script>
  </main>
</Layout>
<style>
  .container {
    max-width: 400px;
    margin: 3rem auto;
    padding: 2rem;
    background: #fff;
    border-radius: 8px;
    box-shadow: 0 2px 8px rgba(0,0,0,0.07);
    text-align: center;
  }
  h1 {
    color: var(--navy-blue);
    margin-bottom: 1rem;
  }
  p {
    font-size: 1.1rem;
    margin-bottom: 0.5rem;
  }
</style>
